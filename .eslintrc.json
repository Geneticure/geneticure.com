{
	"extends": [
		"plugin:astro/recommended",
		"./node_modules/@robertakarobin/util/.eslintrc.json"
	],
	"globals": {
		"Astro": "readonly"
	},
	"overrides": [
		{
			"files": ["*.astro"],
			"parser": "astro-eslint-parser",
			"parserOptions": {
				"parser": "@typescript-eslint/parser",
				"extraFileExtensions": [".astro"]
			},
			"rules": {
				"indent": ["off"],
				"space-infix-ops": ["off"]
			}
		}
	],
	"parserOptions": {
		"extraFileExtensions": [".astro"]
	}
}
